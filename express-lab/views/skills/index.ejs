<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Skills</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <h1>Skills</h1>
    <ul>
      <a href="/skills/new">make new skill</a>
      <% skills.forEach(function(t) { %>
        <li>

          <form class="delete-form" method="post" action="/skills/<%= t.id %>?_method=Delete">
            <button type='submit'>x</button>
          </form>

          <a href="/skills/<%= t.id %> "><%= t.skill %></a>
            - 
          <%= t.Completed ? 'Completed' : 'Not Completed' %>
        </li>
      <% }); %>
    </ul>
</body>
</html>